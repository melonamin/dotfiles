// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "ssh_connections": [
    {
      "host": "mini1.wwh.lol",
      "username": "alex",
      "projects": [
        {
          "paths": [
            "~/Documents"
          ]
        },
        {
          "paths": [
            "~/Documents/docker"
          ]
        }
      ]
    }
  ],
  "theme": "Atelier Forest Light",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "collaboration_panel": {
    "button": false
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "languages": {
    "Python": {
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"]
        }
      },
      "format_on_save": "on"
    }
  }
}
