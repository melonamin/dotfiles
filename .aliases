# Cross-platform aliases
# Platform-specific aliases are in ~/.config/fish/conf.d/platform.fish

# Dotfiles git
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# Easier navigation: .., ..., ...., .....
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Shortcuts
alias d="cd ~/Developer/"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias g="git"

# Modern CLI replacements
alias ls='eza'
alias la='ls -la'
alias cat='bat -p'
alias top='btop'
alias v='sk --preview "bat --color=always {}"'
alias find='fd'

# Always enable colored grep output
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Enable aliases to be sudo'ed
alias sudo='sudo '

# Get week number
alias week='date +%V'

# IP addresses (cross-platform)
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ips="ifconfig -a 2>/dev/null | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Canonical hex dump; some systems have this symlinked
command -v hd > /dev/null || alias hd="hexdump -C"

# Cross-platform checksum fallbacks
command -v md5sum > /dev/null || alias md5sum="md5"
command -v sha1sum > /dev/null || alias sha1sum="shasum"

# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"

# URL-encode strings
alias urlencode='python3 -c "import sys, urllib.parse; print(urllib.parse.quote_plus(sys.argv[1]))"'

# Merge PDF files, preserving hyperlinks
alias mergepdf='gs -q -dNOPAUSE -dBATCH -sDEVICE=pdfwrite -sOutputFile=_merged.pdf'

# Intuitive map function
alias map="xargs -n1"

# Serve a folder with Python http server
alias server="python3 -m http.server"

# Emacs client
alias emacs="emacsclient -c -a 'emacs'"

# Count lines with tokei
alias cloc="tokei --sort code"

# mise task runner
alias mr='mise run'

# AI tools
alias dclaude="claude --dangerously-skip-permissions"
alias dcodex="codex -m gpt-5.1-codex --full-auto -c model_reasoning_effort=high"
alias ddcodex="codex -c model_reasoning_effort=high --dangerously-bypass-approvals-and-sandbox"

# Review uncommitted changes with multiple providers
alias mpt-review='mpt --git.diff --openai.enabled --google.enabled --anthropic.enabled --timeout=5m -p "Perform a comprehensive code review of these changes. Analyze the design patterns and architecture. Identify any security vulnerabilities or risks. Evaluate code readability, maintainability, and idiomatic usage. Suggest specific improvements where needed."'

alias n="nvim"
alias lg="lazygit"
alias ld="lazydocker"
